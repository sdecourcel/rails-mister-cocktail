<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <% if dose.persisted? %>
    <li><%= dose.ingredient.name %>: <%= dose.description %></li>
  <% end %>
<% end %>

<%= render 'doses/form', cocktail: @cocktail, dose: @dose %>




<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

