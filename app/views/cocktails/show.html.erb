<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %></li>
<% end %>

<%= render 'doses/form', cocktail: @cocktail, dose: @dose, ingredients: @ingredients %>




<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

