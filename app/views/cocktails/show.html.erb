<h1><%= @cocktail.name %></h1>


  <div>
    <% @cocktail.photos.each do |photo| %>

        <%= cl_image_tag photo.path, width: 200, height: 200, crop: :fit %>

    <% end %>
  </div>

<% @cocktail.doses.each do |dose| %>
  <% if dose.persisted? %>
    <li><%= dose.ingredient.name %>: <%= dose.description %> <%= link_to "delete", dose_path(dose), method: :delete %></li>
  <% end %>
<% end %>

<%= render 'doses/form', cocktail: @cocktail, dose: @dose %>




<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "All cocktails", cocktails_path %>
