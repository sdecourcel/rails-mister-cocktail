<h1>Liste des cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <%= render "cocktails/cocktail", cocktail: cocktail %>
  <div>
    <% if cocktail.photo? %>
      <%= cl_image_tag cocktail.photo.path, width: 200, height: 200, crop: :fit %>
    <% end %>
  </div>
<% end %>

<%= link_to "Add a cocktail", new_cocktail_path %>

